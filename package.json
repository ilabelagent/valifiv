{
  "name": "valifi-platform",
  "version": "1.0.0",
  "description": "AI-Powered Financial Platform",
  "private": true,
  "scripts": {
    "postinstall": "npm install --prefix backend",
    "dev": "vercel dev",
    "start": "vercel deploy --prod"
  },
  "devDependencies": {
    "vercel": "^35.2.1"
  },
  "vercel": {
    "functions": {
      "backend/index.js": {
        "includeFiles": "backend/**"
      }
    },
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/backend/index.js"
      }
    ]
  }
}